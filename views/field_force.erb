<%= erb :menu, locals: { pageid: 'home' } %>

<% if fieldforce.any? %>
<% content_for :sub_heading do %>
  Click a Field Worker to review.
<% end %>

<table class="primary">
  <thead>
    <tr>
      <th>Forename</th>
      <th>Surname</th>
      <th>ID</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% fieldforce.each_with_index do |fieldmember| %>
      <tr>
        <% if fieldmember['forename'].present? %>
          <td><%=h fieldmember['forename'] %></td>
        <% else %>
          <td>-</td>
        <% end %>
        <% if fieldmember['surname'].present? %>
          <td><%=h fieldmember['surname'] %></td>
        <% else %>
          <td>-</td>
        <% end %>
        <% if fieldmember['id'].present? %>
          <td><%=h fieldmember['id'] %></td>
        <% else %>
          <td>-</td>
        <% end %>
        <td><a href="/fieldforce/<%=fieldmember['id'] %>">View Field Worker</a></td>
      <% end %>
    </tr>
  </tbody>
</table>

<% content_for :footer do %>
  <h3>Cases</h3>

  <% if cases.any? %>
    <%= will_paginate cases, :previous_label => '&lt; Prev', :next_label => 'Next &gt;' %>
    <table class="secondary">
      <thead>
        <tr>
          <th>Case Status</th>
          <th>Case Created</th>
          <th>Sample Unit Type</th>
          <th>Respondent</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% cases.each_with_index do |kase, i| %>
        <tr class="<%= i.even? ? 'even' : 'odd ' %>">
        <% if kase['state'].present? %>
          <td><%=h kase['state'] %></td>
          <% else %>
            <td>-</td>
          <% end %>
        <% if kase['createdDateTime'].present? %>
          <td><%=h kase['createdDateTime'].to_date %></td>
        <% else %>
          <td>-</td>
        <% end %>
        <% if kase['sampleUnitType'].present? %>
          <td><%=h kase['sampleUnitType'] %></td>
        <% else %>
          <td>-</td>
        <% end %>
        <% if kase['respondent'].present? %>
          <td><%=h kase['respondent'] %></td>
        <% else %>
          <td>-</td>
        <% end %>
        <td><a href="/fieldforceid/<%=h fieldforceid %>/cases/<%=h kase['id'] %>/events">View</a></td>
        </tr>
      <% end %>
        </tbody>
      </table>
      <%= will_paginate cases, :previous_label => '&lt; Prev', :next_label => 'Next &gt;' %>
  <% else %>
    <p id="information"><strong>There are no cases for this address.</strong></p>
  <% end %>
<% end %>
<% else %>
  <p id="information"><strong>There are no businesses for this reference.</strong></p>
<% end %>
